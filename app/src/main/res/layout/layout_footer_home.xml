<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/home_screen_bg_bottom" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/ivHome_Monster"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/home_screen_ic_monster" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:paddingBottom="10dp"
                android:layout_toRightOf="@id/ivHome_Monster"
                android:background="@drawable/home_screen_ic_textbox"
                android:text="@string/text_home_what_new"
                android:textColor="@color/white"
                android:textSize="15sp" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>